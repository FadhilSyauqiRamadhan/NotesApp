<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#673AB7"
    tools:context=".DetailPageActivity">

    <!-- CardView untuk detail catatan -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cvDetailNotes"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="6dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Konten dalam LinearLayout -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- TextView untuk Judul -->
            <TextView
                android:id="@+id/tvDetailJudul"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Judul Catatan"
                android:textAlignment="center"
                android:textColor="@color/blue"
                android:textSize="24sp"
                android:textStyle="bold"
                tools:text="Judul Catatan" />

            <!-- TextView untuk Isi Catatan -->
            <TextView
                android:id="@+id/tvIsiNotes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Isi Notes"
                android:textColor="@color/black"
                android:textSize="16sp"
                tools:text="Isi dari catatan Anda akan ditampilkan di sini." />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>